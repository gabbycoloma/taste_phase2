<!doctype html>
<html lang="en">

<head>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700;800&family=PT+Sans&display=swap');
    </style>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- jQuery -->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

    <script type="text/javascript" src="../script.js"></script>
    <!-- Bootstrap CSS -->

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="icon" href="images/logo/logo2.png" type="image/icon type">

    <title>Taste - Home</title>
</head>

<body>

    <form action="/"></form>
    <!--HEADER-->
    <%- include('./partials/header.ejs') %>
        <div class="container">

            <% posts.forEach(function (posts) {   %>
                <div class="row mt-5 mb-5">
                    <div class="col">
                        <div class="card" style="width: 40rem;">
                            <div class="card-header" id="card-header">
                                <div class="header-account">
                                    <a href="view.html"><img src="/images/profile/default.jpg" alt="defaultDP" class="img-DP large-dp" data-bs-toggle="tooltip" data-bs-placement="bottom" title="View Profile"></a>
                                    <div class="info-header">
                                        <h6 class="username-mainheader">
                                            <a href="/profile" data-bs-toggle="tooltip" data-bs-placement="bottom" title="View Profile">
                                                <%= posts.username %>
                                            </a>
                                        </h6>
                                        <h6 id="date">
                                            <%= posts.date.toLocaleDateString() %>
                                        </h6>
                                    </div>
                                </div>
                                <div class="ellipsis float-right">
                                    <div class="dropdown">
                                        <button class="ellipsis-dropdown" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="cursor: pointer;">
                                            <iconify-icon inline icon="ion:ellipsis-horizontal-outline" width="25" height="25"></iconify-icon>
                                        </button>
                                        <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                                            <a class="dropdown-item" href="/review/view/<%= posts._id %>">View Post</a>
                                            <a class="dropdown-item" href="/">Report Post</a>
                                        </div>
                                    </div>
                                    </a>
                                </div>
                            </div>
                            <a href="/review/view/<%= posts._id %>" data-bs-placement="bottom" title="View Post"><img class="card-img-top card-home" src="/images/posts/<%= posts.image_post %>" alt="Card image cap"></a>
                            <div class="card-body" id="card-body-home">
                                <div class="body-header">
                                    <a href="/review/view/<%= posts._id %>" id="restaurant_name">
                                        <h5 class="card-title font-weight-bold" data-bs-placement="left" title="View Post">
                                            <%= posts.restaurant_name %>
                                        </h5>
                                    </a>
                                    <div class="body-rating">
                                        <p class="card-text float-right font-weight-bold">
                                            Rating:
                                            <%= posts.rating %>/10
                                        </p>
                                    </div>

                                </div>

                                <h6 class="card-subtitle mb-2 text-muted font-italic" id="card-subtitle">
                                    <%= posts.food_name %>
                                </h6>
                                <p class="card-text">
                                    <%= posts.review %>
                                </p>
                            </div>
                            <div class="card-footer">
                                <div class="reactions">
                                    <div class="likes">
                                        <iconify-icon icon="bx:like" width="25" height="25" class="like-icon"></iconify-icon>
                                        <!-- <iconify-icon icon="ant-design:like-twotone" style="color: #dc6769;"></iconify-icon> -->
                                        <small class="text-muted" id="likes-text"><%= posts.likes %></small>
                                    </div>
                                    <div class="likes">
                                        <iconify-icon icon="bx:dislike" width="25" height="25" class="like-icon"></iconify-icon>
                                        <!-- <iconify-icon icon="ant-design:dislike-twotone" style="color: #dc6769;"></iconify-icon> -->
                                        <small class="text-muted" id="likes-text"><%= posts.likes %></small>
                                    </div>
                                </div>
                                <small class="text-muted">1 comment</small>
                                <hr>
                                <div class="comment-footer">
                                    <h6 class="username-footer" id="username"><a href="profile-2.html" data-bs-toggle="tooltip" data-bs-placement="bottom" title="View Profile">eric.adren</a></h6>
                                    <h6 id="comment">I quite liked the taste of Pho as well. But I wasnt a fan of the smell.</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <%});%>


        </div>
        <script>
            $(function() {
                $('[data-toggle="tooltip"]').tooltip()
            })
        </script>
        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
        <script src="https://code.iconify.design/iconify-icon/1.0.0/iconify-icon.min.js"></script>
</body>

</html>